<ul>
    <li>
        <a href="/post/{{id}}">
            <article class="post">
                <div class="post-header">
                    <span class="post-title">{{post_title}}</span><span class="author-date">Posted by {{user.username}} on {{format_date created_at}}</span>
                </div>
                <div class="post-body">
                    <p>{{post_body}}</p>
                </div>
                <div class="post-footer">
                    <span></span><span>{{comments}} {{format_plural "comment" comments}}</span>
                </div>
            </article>
        </a>
    </li>
</ul>